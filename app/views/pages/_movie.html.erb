<% @movies.each_slice(3) do |movies| %>
<div class="row" itemscope itemtype="http://schema.org/Movie">
  <% movies.each do |movie| %>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="<%= movie['poster_url'] %>" itemprop="image">
      <div class="caption center">
        <h2 itemprop="name"><%= movie['title'] %></h2>
        <span class="glyphicon glyphicon-star" itemprop="aggregateRating"></span> <b><%= movie['rating'] %> no IMDB</b>
        <span class="middle-dot"> · </span>
        <span class="glyphicon glyphicon-map-marker"></span> <b><%= pluralize movie['theater_count'], "cinema" %> </b>
        <span class="description" itemprop="description">“<%= movie['plot_outline'] || movie['pt_br_plot_outline'] %>”</span>
        <p><a href=<%= movie['ticket_url'] %> class="btn btn-primary btn-lg buy" role="button" target="_blank">Comprar Ingresso</a></p>
      </div>
    </div>
  </div>
  <% end %>
</div>
<% end %>
